execute pathogen#infect()
syntax enable
set background=dark
colorscheme solarized
set tabstop=2
set softtabstop=2
set number
set cursorline
set wildmenu
set showmatch
set incsearch
set hlsearch
set expandtab
set shiftwidth=4
set smarttab
set autoindent
set smartindent
nnoremap <leader><space> :nohlsearch<CR>
noremap jk <ESC>
let mapleader = "\<Space>"
set encoding=utf-8
inoremap ( ()<Esc>i
inoremap { {<CR><BS>}<Esc>ko
